{
  "name": "ggst-discord-tool",
  "version": "1.0.0",
  "description": "ギルティギア・ストライブ対戦情報管理Discord Bot",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && mkdir -p dist/database && cp src/database/*.sql dist/database/",
    "start": "node dist/index.js",
    "register-commands": "tsx src/commands/register.ts",
    "seed": "tsx seed/import-common-data.ts",
    "seed:moves": "tsx src/database/seed-character-moves.ts",
    "seed:character-info": "node src/database/seed-character-info.js",
    "seed:common-moves": "tsx src/database/seed-common-moves.ts",
    "seed:strategies": "tsx src/database/seed-common-strategies.ts",
    "migrate:v2": "tsx src/database/migrate-to-v2.ts",
    "migrate:settings": "tsx src/database/migrate-add-settings-table.ts",
    "migrate:backups": "tsx src/database/migrate-add-backups-table.ts",
    "migrate:fix-names": "tsx src/database/migrate-fix-character-names.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "ggst",
    "guilty-gear"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}